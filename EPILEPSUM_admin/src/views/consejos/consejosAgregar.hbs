</div>

<form action="/consejo/agregar/{{user.idUsuario}}" method="POST">
    <div id="contenedor">
        <div id="titulo">
            {{#each idMax}}
            <label>Agregar Consejo N: <input type="text" name="consejos" id="numero"
                    value="{{'MAX(idConsejo)'}}"></label>
            {{/each}}
        </div>

        <div id="Nombres">
            <label>
                Nombre:
            </label>
            <input type="text" name="nombreConsejo" id="nombre" required>
        </div>

        <div id="descripcion">
            <label>
                Descripci√≥n:
            </label>
            <input type="text" name="consejosDetallesConsejo" id="descripcion" required>
        </div>

        <div id="Guardar">
