<link rel="stylesheet" href="/css/consejos/ConsejosLista.css" />

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png" />
</div>

<form action="/consejo/lista/{{user.idUsuario}}" method="get" id="ocultar">

    <div id="contenedor">
        <div class="row">
            {{#each enlistar}}
            <div id="tarjeta">
                <div id="titulo">
                    <p>
                        <b>Mi Consejo:</b>
                    </p>
                </div>

                <div id="foto">
                    <p>
                        Foto:
                        {{imagenConsejo}}
                    </p>
                </div>

                <div id="video">
                    <p>
                        Video:
                        {{videoConsejo}}
                    </p>
                </div>

                <div id="Nombres">
                    <p>
                        Nombre:
                        {{nombreConsejo}}
                    </p>
                </div>

                <div id="Descripcion">
                    <p>
                        Descripción:
                        {{consejosDetallesConsejo}}
                    </p>
                </div>

                <div id="botonEditar">
                    <a href="/consejo/editar/{{idConsejo}}">
                        <button>
                            Editar
                        </button>
                    </a>
                </div>

                <div id="botonEliminar">
                    <a href="/consejo/eliminar/{{idConsejo}}">
                        <button>Eliminar
                        </button>
                    </a>
                </div>
            </div>
            {{else}}
            <div id="mensaje">
                <p><b>Usted no tiene registrado ningún Consejo. </b></p>
                <a href="/consejo/agregar/{{user.idUsuario}}">
                    <button type="button">¿Desea registrar?</button>
                </a>
            </div>
            {{/each}}
        </div>
    </div>

    <div id="plus">
        <a href="/consejo/agregar/{{user.idUsuario}}">
            <button type="button"><img src="/img/icons/white/plus.png" /></button>
        </a>
    </div>
</form>