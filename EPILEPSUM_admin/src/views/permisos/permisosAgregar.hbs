<div id="fondo">
    <img src="/img/fondos/Fondo.jpg">
</div>

<div id="contenedor">
    <form action="/permisos/agregar/{{user.idUsuario}}" method="POST">
        <div id="tarjeta">
            <div="titulo">
                <h1> Permisos </h1>
        </div>
        <div id="nombre">
            Nombre:
            <input type="text" name="nombrePermisos" id="nombre" required >

        </div>

        <div id="estado">
            Estado:
            <input type="text" name="estadoPermisos" id="nombre" required >
        </div>

        <div id="boton">
