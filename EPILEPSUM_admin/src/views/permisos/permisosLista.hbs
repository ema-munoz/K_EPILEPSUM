<link rel="stylesheet" href="/css/permisos/permisosLista.css" />

<div id="fondo">
  <img src="/img/fondos/sistemaNervioso.png" />
</div>

<form action="/permisos/lista/{{user.idUsuario}}" method="get" id="ocultar">

  <div id="contenedor">
    <div class="row">
      {{#each enlistar}}
        <div id="tarjeta">
          <div id="titulo">
            <p>
              <b>Permisos:</b>
            </p>
          </div>

          <div id="Nombres">
            <p>
              Nombre:
              {{nombrePermisos}}
            </p>
          </div>

          <div id="estado">
            <p>
              Estado:
              {{estadoPermisos}}
            </p>
          </div>

          <div id="botonEditar">
            <a href="/permisos/editar/{{idpermisos}}">
              <button type="button">
                Editar
              </button>
            </a>
          </div>

          <div id="botonEliminar">
            <a href="/permisos/eliminar/{{idpermisos}}">
              <button type="submit">
                Eliminar
              </button>
            </a>
          </div>
        </div>

      {{else}}
        <div id="mensaje">
          <p>
            <b>Usted no tiene registrado ningún permiso.</b>
          </p>
          <a href="/permisos/agregar/{{user.idUsuario}}">
            <button type="button">
              ¿Desea registrar?
            </button>
          </a>
        </div>
      {{/each}}
    </div>
  </div>

  <div id="plus">
    <a href="/permisos/agregar/{{user.idUsuario}}">
      <button type="button">
        <img src="/img/usuarios/plus.png" />
      </button>
    </a>
  </div>
</form>