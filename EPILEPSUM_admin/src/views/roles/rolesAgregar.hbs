<link rel="stylesheet" href="/css/roles/rolesAgregar.css" />

<div id="fondo">
  <img src="/img/fondos/Fondo.jpg" />
</div>

<form action="/roles/agregar/{{user.idUsuario}}" method="post" id="ocultar">
  <div id="contenedor">
    <div id="tarjeta">
      <div id="titulo">
        <h1> Roles </h1>
      </div>

      <div id="Nombre">
        Nombre:
        <input type="text" name="nombreRol" id="nombre" required />

      </div>

      <div id="Estado">
        Estado:
        <input type="text" name="estadoRol" id="nombre" required />
      </div>

