<link rel="stylesheet" href="/css/roles/rolesLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<form action="/roles/lista/{{user.idUsuario}}" method="get" id="ocultar">


    <div id="contenedor">
        <div class="row">
            {{#each enlistar}}
            <div id="tarjeta">
                <div id="titulo">
                    <p>
                        <b>Roles:</b>
                    </p>
                </div>

                <div id="Nombres">
                    <p>
                        Nombre: {{nombreRol}}
                    </p>
                </div>

                <div id="Estado">
                    <p>
                        Estado: {{estadoRol}}
                    </p>
                </div>

                <div id="botonEditar">
                    <a href="/roles/editar/{{idrol}}">
                        <button type="button">Editar</button>
                    </a>
                </div>

                <div id="botonEliminar">
                    <a href="/roles/eliminar/{{idrol}}">
                        <button type="submit">Eliminar</button>
                    </a>
                </div>
            </div>

            {{else}}
            <div id="mensaje">
                <p><b>Usted no tiene registrado ningún rol.</b></p>
                <a href="/roles/agregar/{{user.idUsuario}}">
                    <button type="button">¿Desea registrar?</button>
                </a>
            </div>
            {{/each}}
        </div>
    </div>

    <div id="plus">
        <a href="/roles/agregar/{{user.idUsuario}}">
            <button type="button"><img src="/img/usuarios/plus.png"></button>
        </a>
    </div>
</form>