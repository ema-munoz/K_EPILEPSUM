<link rel="stylesheet" href="/css/sintomasCss/sintomasAgragar.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>
<form action="/sintomas/agregar/{{user.idUsuario}}" method="post">
    <div id="contenido">
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Sintomas:</b>
                </p>
            </div>


            <div id="Nombre">
                <label>Sintomas:</label>
                <input type="text" name="nombreSintomas" id="nombre">
            </div>

            <div id="Descripcion">
                <label> Descripcion :</label>
                <textarea type="text" name="descrpcionSintomas" id="descripcion" maxlength="2500" required> </textarea>

            </div>

            <div id="boton">
                <button type="submit">Guardar</button>
            </div>
        </div>
    </div>

</form>