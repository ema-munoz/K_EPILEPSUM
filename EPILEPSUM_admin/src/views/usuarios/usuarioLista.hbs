<!-- Required meta tags -->
<link rel="stylesheet" href="/css/ContactosEmergencia/contactosLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<form action="/contactos/lista/{{user.idPaciente}}" method="GET"></form>


<div id="contenedor">
    <div class="row">
        {{#each enlistar}}
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Usuarios:</b>
                </p>
            </div>

          
            <div id="Estado">
                <p>
                    Estado: {{nombreFamiliar}}
                </p>
            </div>

    

            <div id="botonEditar">
                <a href="/contactos/editar/{{idContactosEmergencia}}">
                    <button type="button">Editar</button>
                </a>
            </div>

            <div id="botonEliminar">
                <a href="/contactos/eliminar/{{idContactosEmergencia}}">
                    <button type="submit">Eliminar</button>
                </a>
            </div>
        </div>

        {{else}}
        <div id="mensaje">
            <p><b>Usted no tiene registrado ningún usuario.</b></p>
            <a href="/contactos/agregar/{{user.idPaciente}}">
                <button type="button">¿Desea registrar?</button>
            </a>
        </div>
        {{/each}}
    </div>
</div>

<div id="plus">
    <a href="/contactos/agregar/{{user.idPaciente}}">
        <button type="button"><img src="/img/usuarios/plus.png"></button>
    </a>
</div>
