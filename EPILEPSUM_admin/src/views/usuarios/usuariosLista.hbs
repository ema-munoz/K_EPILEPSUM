<link rel="stylesheet" href="/css/rolesUsuarios/usuariosLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<form action="/usuarios/lista/{{user.idUsuario}}" method="GET"></form>


<div id="contenedor">
    <div class="row">
        {{#each enlistar}}
        <div id="tarjeta">
            <div id="titulo">
                <p>
                    <b>Usuarios:</b>
                    <img src="/img/usuarios/undraw_male_avatar_323b.svg">
                </p>
            </div>

            <div id="Nombres">
                <p>
                    Nombre: {{nombreUsuario}}
                </p>
            </div>


            <div id="Estado">
                <p>
                    Estado: {{estadoUsuario}}
                </p>
            </div>



            <div id="botonEditar">
                <a href="/usuarios/editar/{{idusuario}}">
                    <button type="button">Editar</button>
                </a>
            </div>

            <div id="botonEliminar">
                <a href="/usuarios/eliminar/{{idusuario}}">
                    <button type="submit">Eliminar</button>
                </a>
            </div>
        </div>

        {{else}}
        <div id="mensaje">
            <p><b>Usted no tiene registrado ningún usuario.</b></p>
            <a href="/usuarios/agregar/{{user.idUsuario}}">
                <button type="button">¿Desea registrar?</button>
            </a>
        </div>
        {{/each}}
    </div>
</div>

<div id="plus">
    <a href="/usuarios/agregar/{{user.idUsuario}}">
        <button type="button"><img src="/img/usuarios/plus.png"></button>
    </a>
</div>