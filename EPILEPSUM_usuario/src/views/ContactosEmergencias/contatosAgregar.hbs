<link rel="stylesheet" href="/css/ContactosEmergencia/contactosAgregar.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso.png">
</div>

<div id="contenedor">
    <form action="/contactos/agregar/{{user.idPaciente}}" method="post" id="ocultar">

        <div id="Nombres">
            <label>
                Nombre:
            </label>
            <input type="text" name="nombreContactosEmergencia" id="nombre" required>
        </div>

        <div id="Familiar">
            <label>
                Familiar:
            </label>
            <select name="familiar" id="familiar" required>
                {{#each familiar}}
                <option value="{{this.idFamiliar}}">
                    {{this.nombreFamiliar}}
                </option>
                {{/each}}
            </select>
        </div>

        <div id="Telefono">
            <label>
                Tel√©fono (Opcional):
            </label>
            <input type="number" name="telefonoContactosEmergencia" id="telefono">
        </div>

        <div id="Celular">
            <label>
                Celular:
            </label>
            <input type="number" name="celularContactosEmergencia" id="celular" required>
        </div>

        <div id="boton">
            <button type="submit" id="btn-agregar">
                Agregar
            </button>
        </div>
    </form>
</div>