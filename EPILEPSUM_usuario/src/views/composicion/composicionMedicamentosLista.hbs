<link rel="stylesheet" href="/CSS/composicion/composicionMedicamentosLista.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso1.jpg">
</div>

<div id="contenedor">
    <form action="/composicionMedicamento/lista/{{user.idPaciente}}" method="POST">
        <div class="row">
            {{#each enlistar}}
            <div id="tarjeta">
                <div id="titulo">
                    <h3>Medicamentos Ingresados</h3>
                </div>

                <div id="nombre">
                    <p>
                        <b>Medicamento:</b><br>
                        {{nombreMedicamentos}}
                    </p>

                </div>

                <div id="dosis">
                    <p>
                        <b>Composicion del Medicamento:</b><br>
                        {{composicionMedicamentos}}
                    </p>

                </div>

                <div id="detalle">
                    <p> <b> Detalle del Medicamento:</b><br>
                        {{descripcionMedicamentos}}</p>

                </div>

                <div id="administracion">
                    <p> <b> Via de Administración del Medicamento:</b><br>
                        {{viaAdministracionMedicamentos}}</p>

                </div>

                <div id="contraindicaciones">
                    <p>
                        <b> Contraindicaciones del Medicamento:</b><br>
                        {{indicacionesMedicamentos}}
                    </p>

                </div>

                <div id="Dosis">
                    <p> <b> Dosis del Medicamento: </b><br>
                        {{dosisMedicamentos}}</p>

                </div>

                <div id="fechaElaboracion">
                    <p> <b> Fecha de Elaboracion del Medicamento:</b><br>
                        {{fechaElaboracionMedicamentos}}</p>

                </div>

                <div id="fechaVencimiento">
                    <p>
                        <b> Fecha de Vencimiento del Medicamento:</b><br>
                        {{fechaVencimientoMedicamentos}}
                    </p>

                </div>

                <div id="laboratorio">
                    <p>
                        <b> Laboratorio:</b><br>
                        {{laboratorioMedicamentos}}
                    </p>

                </div>

                <div id="botonEditar">
                    <a href="/composicionMedicamento/editar/{{idComposiciones}}">
                        <button type="button">Editar</button>
                    </a>
                </div>

                <div id="botonEliminar">
                    <a href="/composicionMedicamento/eliminar/{{idComposiciones}}">
                        <button type="button">Eliminar</button>
                    </a>
                </div>
            </div>

            {{else}}
            <div id="mensaje">
                <p>
                    <b>Usted no tiene registrado ningún medicamento.</b>
                </p>
                <a href="/medicamentos/agregar/{{user.idComposiciones}}">
                    <button type="button">¿Desea registrar?</button>
                </a>
            </div>
            {{/each }}
        </div>
    </form>
</div>

<div id="plus">
    <a href="/composicionMedicamento/agregar/{{user.idPaciente}}">
        <button type="button">
            <img src="/img/usuarios/plus.png">
        </button>
    </a>
</div>