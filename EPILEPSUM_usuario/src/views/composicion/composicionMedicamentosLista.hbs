<link rel="stylesheet" href="/CSS/composicion/composicionMedicamentos.css">

<div id="fondo">
    <img src="/img/fondos/sistemaNervioso3.jpg">
</div>

<div id="contenedor">
    <form action="/composicionMedicamento/lista/{{user.idPaciente}}" method="POST">
        <div class="row">
            {{#each enlistar}}
            <div id="tarjeta">
                <div id="titulo">
                    <h3>Medicamentos Ingresados</h3>
                </div>
                <div id="nombre">
                    <p>Nombre del Medicamento: {{nombreMedicamentos}}</p>

                </div>
                <div id="dosis">
                    <p>Composicion del Medicamento: {{composicionMedicamentos}}</p>

                </div>
                <div id="detalle">
                    <p>Detalle del Medicamento: {{descripcionMedicamentos}}</p>

                </div>
                <div id="administracion">
                    <p>Via de Administraci√≥n del Medicamento: {{viaAdministracionMedicamentos}}</p>

                </div>
                <div id="contraindicaciones">
                    <p>Contraindicaciones del Medicamento: {{indicacionesMedicamentos}}</p>

                </div>
                <div id="Dosis">
                    <p>Dosis del Medicamento: {{dosisMedicamentos}}</p>

                </div>
                <div id="fechaElaboracion">
                    <p>Fecha de Elaboracion del Medicamento: {{fechaElaboracionMedicamentos}}</p>

                </div>
                <div id="fechaVencimiento">
                    <p>Fecha de Vencimiento del Medicamento: {{fechaVencimientoMedicamentos}}</p>

                </div>
                <div id="laboratorio">
                    <p>Laboratorio: {{laboratorioMedicamentos}}</p>

                </div>
                <div id="botonEditar">
                    <a href="/medicamentos/editar/{{idComposiciones}}">
                        <button type="button">Editar</button>
                    </a>
                </div>
                <div id="botonEliminar">
                    <a href="/medicamentos/eliminar/{{idComposiciones}}">
                        <button type="button">Eliminar</button>
                    </a>
                </div>
            </div>
            
            {{/each }}
        </div>
    </form>
</div>

<div id="plus">
    <a href="/medicamentos/agregar/{{user.idComposiciones}}">
        <button type="button"><img src="/img/usuarios/plus.png"></button>
    </a>
</div>